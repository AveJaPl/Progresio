generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Parameter {
  id        Int       @id @default(autoincrement())
  name      String
  type      String
  progress  Progress[]
}

model Progress {
  id           Int      @id @default(autoincrement())
  parameterId  Int
  value        String   // Możesz zmienić typ na odpowiedni dla Twojego przypadku
  date         DateTime @default(now())
  
  parameter    Parameter @relation(fields: [parameterId], references: [id])
}
